# Fusion XBTC Environment Configuration
# Copy this file to .env and fill in your values

# Ethereum Configuration
ETHEREUM_RPC_URL=https://eth-goerli.g.alchemy.com/v2/your-api-key
ETHEREUM_PRIVATE_KEY=your_private_key_here
FUSION_HTLC_ADDRESS=0x0000000000000000000000000000000000000000

# Frontend Configuration
VITE_ETH_HTLC_ADDRESS=0x0000000000000000000000000000000000000000
VITE_FUSION_HTLC_ADDRESS=0x0000000000000000000000000000000000000000
VITE_FUSION_API_BASE_URL=https://fusion.1inch.io
VITE_FUSION_API_KEY=your_fusion_api_key_here

# Bitcoin Configuration
BITCOIN_ELECTRUM_HOST=testnet.hsmiths.com
BITCOIN_ELECTRUM_PORT=53011
BITCOIN_ELECTRUM_PROTO=ssl

# Relayer Configuration
RELAYER_SECRET_KEY=your_relayer_secret_key_here
RELAYER_MAX_RETRIES=3
RELAYER_RETRY_DELAY=5000


# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/fusion-xbtc.log

# Security Configuration
JWT_SECRET=your_jwt_secret_here
SESSION_SECRET=your_session_secret_here

# API Configuration
PORT=3000
NODE_ENV=development 