{
	"name": "fusion-xbtc",
	"version": "1.0.0",
	"description": "Trustless atomic swaps between Ethereum and Bitcoin/Litecoin/Dogecoin/Bitcoin Cash",
	"private": true,
	"workspaces": [
		"cli",
		"eth-contracts",
		"btc-scripts",
		"relayer",
		"frontend",
		"common"
	],
	"scripts": {
		"build": "pnpm -r build",
		"test": "pnpm -r test",
		"lint": "pnpm -r lint",
		"format": "prettier --write .",
		"relayer": "pnpm --filter relayer start",
		"frontend": "pnpm --filter frontend dev",
		"deploy:contract": "pnpm --filter eth-contracts deploy",
		"deploy:fusion": "pnpm --filter eth-contracts run deploy-fusion-htlc",
		"cli": "pnpm --filter cli",
		"fusion:test": "node test-fusion-integration.js",
		"fusion:swap": "pnpm --filter cli fusion-swap"
	},
	"devDependencies": {
		"bitcoinjs-lib": "^5.2.0",
		"bitcore-lib": "^10.10.7",
		"electrum-client": "^0.0.6",
		"eslint": "^9.31.0",
		"ethers": "^6.15.0",
		"forge": "^2.3.0",
		"hardhat": "^2.26.1",
		"prettier": "^3.6.2",
		"solc": "^0.8.30",
		"typescript": "^5.8.3",
		"viem": "^2.33.0"
	},
	"dependencies": {
		"@esbuild-plugins/node-globals-polyfill": "^0.2.3",
		"@esbuild-plugins/node-modules-polyfill": "^0.2.2",
		"bs58": "^6.0.0",
		"bs58check": "^4.0.0",
		"buffer": "^6.0.3",
		"cors": "^2.8.5",
		"ecpair": "^2.1.0",
		"express": "^5.1.0",
		"tiny-secp256k1": "^2.2.4"
	}
}
